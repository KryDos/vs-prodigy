{
	"name": "vs-prodigy",
	"publisher": "KryDos",
	"displayName": "vs-prodigy",
	"description": "Manage external services",
	"version": "0.0.2",
	"icon": "images/logo.png",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./extension.js",
	"contributes": {
		"configuration": {
			"title": "Prodigy",
			"properties": {
				"prodigy.services": {
					"type": "array",
					"markdownDescription": "List of services to handle. Format: `[{\"name\": \"My Command\", \"base_path\":\"/project/dir\" \"command\": \"npm run watch\"}]`"
				}
			}
		},
		"commands": [
			{
				"command": "vs-prodigy.run-service",
				"title": "Prodigy: Run Service"
			},
			{
				"command": "vs-prodigy.stop-service",
				"title": "Prodigy: Stop Service"
			},
			{
				"command": "vs-prodigy.log-service",
				"title": "Prodigy: Service Log"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"tmp": "^0.2.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/KryDos/vs-prodigy"
	}
}
